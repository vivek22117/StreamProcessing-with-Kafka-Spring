{
    "variables" : {
        "region" : "us-east-1",
        "source_ami" : "ami-0de53d8956e8dcf80"
    },
    "builders" : [
        {
            "type" : "amazon-ebs",
            "profile" : "doubledigit",
            "region" : "{{user `region`}}",
            "instance_type" : "t2.small",
            "source_ami" : "{{user `source_ami`}}",
            "ssh_username" : "ec2-user",
            "ami_name" : "Kafka-Cluster-AMI",
            "ami_description" : "Amazon Linux Image with Jenkins Master",
            "run_tags" : {
                "Name" : "packer-builder"
            },
            "tags" : {
                "Tool" : "Packer",
                "Author" : "vivek"
            }
        }
    ],
    "provisioners" : [
        {
            "type" : "file",
            "source" : "/Users/vivek/.ssh/id_rsa",
            "destination" : "/tmp/id_rsa"
        },
        {
            "type" : "file",
            "source" : "/Users/vivek/.ssh/id_rsa.pub",
            "destination" : "/tmp/id_rsa.pub"
        },
        {
            "type" : "file",
            "source" : "./configure-monitoring.sh",
            "destination" : "/tmp/monitoring.sh"
        },
        {
            "type" : "shell",
            "script" : "./setup.sh",
            "execute_command" : "sudo -E -S sh '{{ .Path }}'"
        }
    ]
}
